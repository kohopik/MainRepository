<script>
    var localvariable;
    var send;
    var imgarea;

    $('#clack').click(function () {
        $.ajax({
            url: '/Account/AddAvatar/',
            data: JSON.stringify(send),
            contentType: 'application/json',
            type: 'POST',
            success: function (result) {
                alert('Ваша фотография успешно обновлена');
                $('#ModalContentWithImage').modal('hide');
            }
        });
    });

    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $('#target').attr('src', e.target.result);
                localvariable = e.target.result;
            };
            reader.readAsDataURL(input.files[0]);
            $('#gridSystemModal').modal('hide');
            $('#imgInput').val("")
            $('#ModalContentWithImage').modal('show');
        }
    }
    
    $('#ModalContentWithImage').on('hide.bs.modal', function (e) {
        imgarea.cancelSelection();
    })

    $("#imgInput").change(function ()
    {
        readURL(this);
    });

    $(document).ready(function () {
        imgarea = $('#target').imgAreaSelect(
            {
                instance: true,
                aspectRatio: '4:4', handles: true,
                onSelectEnd: function(img,selection)
                {
                    send = { Avatar: localvariable, x1: selection.x1, x2: selection.x2, y1: selection.y1, y2: selection.y2, height: $('#target').height(), width: $('#target').width() };
                }
            });
    });
    /*другая часть*/

    $(document).ready(function () {
        $('#MessageContent').hide();
    });
    var IsHidden = true;
    $('#MsgButton').click(
    function HideChat() {
        if (!IsHidden) {
            $('#MessageContent').hide();
            $('#MainPersonContent').show();
            IsHidden = true;
        }
        else {
            $('#MessageContent').show();
            $('#MainPersonContent').hide();
            IsHidden = false;
        }
    });

    $('#projects').click(function () {
        $.ajax({
            url: '/Account/_MyProjects/',
            contentType: 'application/html; charset=utf-8',
            type: 'GET',
            dataType: 'html',
            success: function (result) {
                $('#projectsBlock').html(result);
            }
        })
    });

    $('#articles').click(function () {
        $.ajax({
            url: '/Account/_MyArticles/',
            contentType: 'application/html; charset=utf-8',
            type: 'GET',
            dataType: 'html',
            success: function (result) {
                $('#articlesBlock').html(result);
            }
        })
    });
</script>