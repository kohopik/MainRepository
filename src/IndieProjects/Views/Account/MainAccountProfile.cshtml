                        }
                        <p class="text-muted font-13"><strong>Email :</strong> <span class="m-l-15">@Model.Email</span></p>
                        @if (Model.City != null)
                        {
                            <p class="text-muted font-13"><strong>Город :</strong> <span class="m-l-15">@Model.City</span></p>
                        }
                        @if (Model.Country != null)
